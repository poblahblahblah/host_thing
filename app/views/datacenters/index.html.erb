<h1>Listing datacenters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Vendor</th>
    <th>Provider</th>
    <th colspan="6"></th>
  </tr>

  <% @datacenters.each do |datacenter| %>
    <tr>
      <td><%= datacenter.name %></td>
      <td><%= datacenter.vendor %></td>
      <td><%= datacenter.provider %></td>
      <td><%= link_to 'Show', datacenter_path(datacenter) %></td>
      <td><%= link_to 'Edit', edit_datacenter_path(datacenter) %></td>
      <td><%= link_to 'Destroy', datacenter_path(datacenter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New datacenter', new_datacenter_path %>
