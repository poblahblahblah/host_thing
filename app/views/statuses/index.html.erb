<h1>Listing statuses</h1>

<table>
  <tr>
    <th>Name</th>
    <th colspan="4"></th>
  </tr>

  <% @statuses.each do |status| %>
    <tr>
      <td><%= status.name %></td>
      <td><%= link_to 'Show', status_path(status) %></td>
      <td><%= link_to 'Edit', edit_status_path(status) %></td>
      <td><%= link_to 'Destroy', status_path(status), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New status', new_status_path %>
