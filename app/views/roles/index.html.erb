<h1>Roles</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Applications</th>
    <th>Actions</th>
    <th colspan="4"></th>
  </tr>

  <% @roles.each do |role| %>
    <tr>
      <td><%= link_to role.name, role_path(role.name) %></td>
      <td><%= safe_join(role.software_apps.map { |l| link_to(l.name, software_app_path(l.id)) }, ', '.html_safe) %></td>
      <td>
        <%= link_to 'Show', role_path(role) %> |
        <%= link_to 'Edit', edit_role_path(role) %> |
        <%= link_to 'Destroy', role_path(role), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Role', new_role_path, class: "btn btn-primary" %>
