<h2><%= @node.name %></h2>
<hr>
<p>
  <strong>Status: </strong><%= link_to @node.status.name, status_path(@node.status.name) %><br>
  <strong>Roles: </strong><%= safe_join(@node.roles.map { |l| link_to(l.name, role_path(l.name)) }, ', '.html_safe) %><br>
  <strong>Applications: </strong><%= safe_join(@node.software_apps.map { |l| link_to(l.name, software_app_path(l.id)) }, ', '.html_safe) %><br>
  <strong>Datacenter: </strong><%= link_to @node.datacenter.name, datacenter_path(@node.datacenter.name) %><br>
  <strong>MAC Addresses: </strong><%# FIXME safe_join(@node.macs.map { |l| link_to(Mac.find(l.id).name, mac_path(l.id)) }, ', '.html_safe) %><br>
  <strong>Operating System: </strong><%= link_to @node.operating_system.name, operating_system_path(@node.operating_system.id) %><br>
  <strong>Contract Dates: </strong><% if @node.contract_start_date && node.contract_end_date %><%= @node.contract_start_date %> through <%= @node.contract_end_date %><% end %><br>
</p>

<%= @node.interfaces.methods.sort %>

<hr>

<p>
<b>Node Notes:</b>
<%= render @node.comments %>
</p>

<p>
<b>Add a node note:</b>
<%= render 'comments/form' %>
</p>

