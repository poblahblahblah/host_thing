<h1>Nodes</h1>
 
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Role</th>
    <th>Datacenter</th>
    <th>IP Address</th>
    <th>Operating System</th>
    <th colspan="3"></th>
  </tr>
 
  <% @nodes.each do |node| %>
    <tr>
      <td><a href="nodes/<%= node.id %>"><%= node.name %></a></td>
      <td><%= link_to node.status.name, status_path(node.status_id) %></td>
      <td><%= safe_join(node.roles.map { |l| link_to(l.name, role_path(l.id)) }, ', '.html_safe) %></td>
      <td><%= link_to node.datacenter.name, datacenter_path(node.datacenter.id) %></td>
      <td><%# node.internal_ip_address %></td>
      <td><%= link_to node.operating_system.name, operating_system_path(node.operating_system.id) %></td>
      <td>
        <%= link_to 'Show', node_path(node) %> |
        <%= link_to 'Edit', edit_node_path(node) %> |
        <%= link_to 'Destroy', node_path(node), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Node', new_node_path, class: "btn btn-primary" %>
